{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "outDir": "dist",
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false
  },
  "lib": ["es2015"],
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
